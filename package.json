{
  "name": "flatwiki",
  "version": "0.8.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "description": "Datenschutzfreundliches Flat-File-Wiki mit Auth, Suche und Adminverwaltung",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "setup": "sh ./install.sh",
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && node scripts/build-assets.mjs",
    "build:ts": "tsc -p tsconfig.json",
    "start": "node --enable-source-maps dist/index.js",
    "backfill:uploads": "tsx scripts/backfill-upload-derivatives.ts",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.0",
    "@fastify/formbody": "^8.0.0",
    "@fastify/helmet": "^13.0.0",
    "@fastify/multipart": "^9.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "@fastify/static": "^9.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.7.4",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "marked": "^15.0.0",
    "nodemailer": "^6.10.1",
    "sanitize-html": "^2.17.0",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/sanitize-html": "^2.16.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.27.3",
    "jsdom": "^26.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.2.4"
  }
}
